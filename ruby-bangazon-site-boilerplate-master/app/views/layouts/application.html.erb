<!DOCTYPE html>
<html>

<head>
    <title>RubyBangazonSite</title>
    <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
            <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

    <div id="navbar">

        <% if logged_in? %>
            <%= link_to 'Logout', logout_path %>
            <%= link_to 'Your Settings', profile_path%>
            <%= link_to 'Shopping Cart', orders_path %>
            <%= link_to 'Product Categories', product_types_path %>
        <% else %>
            <%= link_to 'Login', login_path %>
            <%= link_to 'Sign Up', signup_path %>
        <% end %>
      
    </div>
    <%= yield %>

</body>

</html>