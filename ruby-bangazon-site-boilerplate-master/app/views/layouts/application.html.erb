<!DOCTYPE html>
<html>

<head>
    <title>RubyBangazonSite</title>

    <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css' %>
            <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

    <div class="container">
        <body>
            <% if logged_in? %>
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                  <a class="navbar-brand" href="">Bangazon</a>
                  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                  <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><%= link_to "Home", products_path, class: "nav-link" %></li>
                        <li class="nav-item"><%= link_to "My Products", customer_products_path, class: "nav-link" %></li>
                        <li class="nav-item"><%= link_to "Shopping Cart", shopping_cart_path, class: "nav-link" %></li>
                    </ul>
                  </div>
                  <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item align-self-end"><%= link_to "Your Settings", profile_path, class: "nav-link" %></li>
                        <li class="nav-item align-self-end"><%= link_to "Log Out", logout_path, class: "nav-link" %></li>
                    </ul>
                  </div>
                </nav>
            <% else %>
                <%= link_to 'Login', login_path %>
                <%= link_to 'Sign Up', signup_path %>
            <% end %>


            <%= yield %>

        </body>
    </div>

</html>