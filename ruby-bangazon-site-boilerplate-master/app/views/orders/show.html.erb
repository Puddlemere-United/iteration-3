<h1>Your Shopping Cart</h1>

<table>
    <tr>
        <th>Product</th>
        <th>Price</th>
    </tr>

    <!-- no equal cause no eval needed -->
    <% @shopping_cart.products.each do |product| %>
        <tr>
            <td>
                <%= product.title %>
            </td>
            <td>
                <%= product.price %>
            </td>
            <td>
                <%= link_to 'Remove from Cart', order_product_path(product),
                                            method: :delete,
                                            data: {confirm: 'Are you sure?'} %>
            </td>

        </tr>



        <!-- end (do) loop -->
        <% end %>
            <tr>
                <th>Order Total</th>
            </tr>

</table>
<%= link_to 'Complete Your Order', select_payment_path  %>