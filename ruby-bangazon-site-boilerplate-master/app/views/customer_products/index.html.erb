<h1>My Products</h1>

<table>
    <tr>
        <th>Product Title</th>
        
    </tr>

    <% @products.each do |product| %>
        <tr>
            <td>
                <%= product.title %>
            </td>
            <td><%= link_to 'Destroy', product_path(product),
              method: :delete,
              data: { confirm: 'Are you sure?'} %></td>
            
            
        </tr>
        <% end %>
</table>