<h1>My Products</h1>

<% @products.each do |product| %>
    <div class="card" style="width: 20rem;">
        <%= image_tag product.image.url(:medium, {:class => 'product_image_smaller' }) %>
        <div class="card-body">
            <h4 class="card-title"><%= product.title %></h4>
            <p class="card-text"><%= product.description %></p>
        </div>
        <div class="card" style="width: 20rem;">
            <ul class="list-group list-group-flush">
                <%= link_to "Edit Item", edit_product_path(product), class: "list-group-item" %>
                <%= link_to "View Details", product_path(product), class: "list-group-item" %>
            </ul>
        </div>
    </div>
<% end %>


<%= link_to "Add A New Product", new_product_path, class: "btn btn-primary btn-lg btn-block" %>
            
                
    



