<h1>My Products</h1>

<table>
     
    <tr>
    <th>Product</th>
    <th>Active Status</th> 
  </tr>

    <% @products.each do |product| %>

        <tr>
            <td>
                <%= product.title %>
            </td>
            <td>
                <%= product.active %>
            </td>
            <td><%= link_to 'Destroy', product,
              method: :delete,
              data: { confirm: 'Are you sure?'} %></td>
            
            
        </tr>
        <% end %>
</table>