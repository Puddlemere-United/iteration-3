<form>
    <div class="form-group">
    <%= form_with(model: @payment_type, local: true) do |form| %>

        <% if @payment_type.errors.any? %>
            <div id="error_explanation">
                <h2>
                    <%= pluralize(@payment_type.errors.count, "error") %> prohibited this payment type from being saved:
                </h2>
                <ul>
                    <% @payment_type.errors.full_messages.each do |msg| %>
                        <li>
                            <div class="alert alert-danger"><%= msg %></div>
                        </li>
                        <% end %>
                </ul>
            </div>
        <% end %>

                <p>
                    <%= form.label :title %><br>
                        <%= form.text_field(:title, {:class => 'form-control'}) %>
                </p>

                <p>
                    <%= form.label :account_number %><br>
                        <%= form.text_area(:account_number, {:class => 'form-control'}) %>
                </p>

                <p>
                    <%= form.submit({:class => 'btn btn-primary'}) %>
                </p>
                <% end %>
    </div>
</form>

