<h1>Your Payment Types</h1>

<table>
    <tr>
        <th>Type</th>
        <th>Account Number</th>
    </tr>

    <!-- no equal cause no eval needed -->
    <% @payment_types.each do |payment_type| %>
        <tr>
            <td>
                <%= payment_type.title %>
            </td>
            <td>
                <%= payment_type.account_number %>
            </td>
            <td>
                <%= link_to 'Show', payment_type_path(payment_type) %>
            </td>
            <td>
                <%= link_to 'New', new_payment_type_path(payment_type) %>
            </td>
            <td>
                <%= link_to 'Destroy', payment_type(payment_type),
                                        method: :delete,
                                        data: {confirm: 'Are you sure?'} %>
            </td>
        </tr>
        <!-- end (do) loop -->
        <% end %>
</table>

<%= link_to 'New Payment Type', new_payment_type_path %>