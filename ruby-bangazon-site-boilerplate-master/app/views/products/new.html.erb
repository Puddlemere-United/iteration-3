<h1>New Product</h1>

<%= form_with model: @product, local: true do |f| %>

	<% if @product.errors.any? %>
	    <div id="error_explanation">
	      <h2>
	        <%= pluralize(@product.errors.count, "error") %> prohibited
	        this product from being saved:
	      </h2>
	      <ul>
	        <% @product.errors.full_messages.each do |msg| %>
	          <li><%= msg %></li>
	        <% end %>
	      </ul>
	    </div>
	<% end %>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :description %><br>
		<%= f.text_field :description %>
	</p>
	
	<p>
		<%= f.label :product_type_id, "Product Type" %>
		<select>
			<% @product_types = ProductType.all %>
			<%= options_from_collection_for_select(@product_types, 'id', 'product_type') %>
		</select>
	</p>

	<p>
		<%= f.label :price %><br>
		<%= f.text_field :price %>
	</p>

	<p>
		<%= f.label :quantity %><br>
		<%= f.text_field :quantity %>
	</p>

	<p>
		<%= f.label :amount_sold, "Amount Sold" %><br>
		<%= f.text_field :sold %>
	</p>

	<p>
		<%= f.label :local_delivery, "Is local delivery available?" %><br>
		<%= radio_button_tag(:local_delivery, "yes") %>
		<%= label_tag(:no_local, "Yes") %>
		<%= radio_button_tag(:local_delivery, "no") %>
		<%= label_tag(:yes_local, "No") %>
	</p>

	<p>
		<%= f.submit "Create Product" %>
	</p>

<% end %>






