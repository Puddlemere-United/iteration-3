
<div class="card" style="width: 20rem;">
    <%= image_tag @product.image.url(:medium, {:class => 'product_image_smaller' }) %>
    <div class="card-body">
        <h4 class="card-title"><%= @product.title %></h4>
        <p class="card-text"><%= @product.description %></p>
        <p class="card-text"><%= number_to_currency(@product.price) %></p>
        <p class="card-text">Inventory: <%= @product.quantity %></p>
        <p class="card-text">Sold: <%= @product.sold %></p>
    </div>
    <div class="card" style="width: 20rem;">
        <ul class="list-group list-group-flush">
            <%= form_tag("/add_to_shopping_cart", method: "post") do  %>
                <%= hidden_field_tag :product_id, @product.id %>

            <%= submit_tag "Add to Cart" %>
            <% end %>
        </ul>
    </div>
</div>