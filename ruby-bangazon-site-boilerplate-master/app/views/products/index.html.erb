<h1>All Products</h1>

<%= form_tag(products_path, method: :get) do %>
  <%= text_field_tag :term %>
<%= submit_tag 'Search' %>

<% end %>

<table>

	<% @products.each do |product| %>
		<tr>
			<td><%= link_to product.title, product %></td>
			<td><%= product.price %></td>
			<td><%= link_to 'Details', product_path(product) %></td>
			<td><%= link_to 'Edit', edit_product_path(product) %></td>
		</tr>

	<% end %>

</table>